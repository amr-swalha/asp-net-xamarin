<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinApp.MainHomePage">
  <ContentPage.Content>
    <StackLayout Padding="30">
      <StackLayout Orientation="Horizontal">
        <Label Text="Movie Id" WidthRequest="130"></Label>
        <Entry x:Name="movieId" WidthRequest="150"></Entry>
      </StackLayout>
      <Button x:Name="btnSearch" Clicked="btnSearch_Click" Text="Search"></Button>
      <StackLayout Orientation="Horizontal">
        <Label Text="Movie Name" WidthRequest="130"></Label>
        <Label Text="{Binding MovieName}" WidthRequest="130"></Label>
      </StackLayout>
      <StackLayout Orientation="Horizontal">
        <Label Text="Release Date" WidthRequest="130"></Label>
        <Label Text="{Binding ReleaseDate}" WidthRequest="130"></Label>
      </StackLayout>
      <StackLayout Orientation="Horizontal">
        <Label Text="Length" WidthRequest="130"></Label>
        <Label Text="{Binding Length}" WidthRequest="130"></Label>
      </StackLayout>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>